{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "incremental": true,
    "lib": [
      "ES6"
    ],
    "module": "CommonJS",
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES6"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}
